<?xml version="1.0"?>
<robot name="myfirst" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Include Color Materials Xacro header -->
  <xacro:include filename="$(find vehicle_description)/urdf/materials.xacro" />
  <xacro:include filename="$(find vehicle_description)/urdf/vehicle.gazebo" />

  <!-- BODY -->
  <link name="base_link">
    <pose>0 0 1 0 0 0</pose>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0.1" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
urdf wheel slipping ros
    <collision name='collision'>
      <geometry>
        <mesh filename="package://vehicle_description/meshes/vehicle.dae"/>
        <!--box size="4 2 1.2"/--> <!-- Height of Vehicle must touch floor so wheels have contact with friction on the ground -->
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <geometry>
        <mesh filename="package://vehicle_description/meshes/vehicle.dae"/>
      </geometry>
    </visual>
  </link>

  <!-- FRONT RIGHT WHEEL -->
  <link name="front_right_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.2" length="0.2519"/>
      </geometry>
    </collision>

    <visual name="front_right_wheel_visual">
      <origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
      <geometry>
        <cylinder length="0.2" radius="0.2519"/> <!--actual length 0.2519 / r = 0.4318-->
      </geometry>
      <material name="blue"/>
    </visual>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
  </link>

  <joint type="continuous" name="front_right_wheel_to_chassis">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin rpy="0 0 0" xyz="0.4 0.89 -0.35"/>
    <axis xyz="1 0 0" rpy= "0 1.5707 1.5707" />
    <limit effort="1000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


</robot>
